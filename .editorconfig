# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript files (Vite frontend)
[*.js]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4
